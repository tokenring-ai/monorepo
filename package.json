{
  "name": "@tokenring-ai/monorepo",
  "description": "TokenRing Monorepo with all community apps and packages",
  "version": "0.2.8",
  "devDependencies": {
    "@tokenring-ai/writer": "workspace:*",
    "@tokenring-ai/coder": "workspace:*",
    "@tokenring-ai/chat-frontend": "workspace:*",
    "@tokenring-ai/web-terminal": "workspace:*",
    "@types/bun": "catalog:",
    "bun-types": "catalog:",
    "husky": "^9.1.7",
    "trufflehog": "^0.0.5",
    "typescript": "catalog:",
    "syncpack": "^14.0.0-alpha.37",
    "vitest": "catalog:"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc --noEmit",
    "coder": "bun --env app/coder/src/tr-coder.js",
    "writer": "bun --env app/writer/src/tr-writer.js",
    "test": "bun run test",
    "prepare": "husky",
    "update-all-dependencies-latest": "npx syncpack@alpha update"
  },
  "type": "module",
  "workspaces": {
    "packages": [
      "pkg/*",
      "app/*",
      "frontend/*",
      "deps/*",
      "docs"
    ],
    "catalog": {
      "@types/react": "19.2.7",
      "@types/react-dom": "19.2.7",
      "@types/bun": "1.3.4",
      "bun-types": "1.3.4",
      "react": "19.2.3",
      "react-dom": "19.2.3",
      "typescript": "5.9.3",
      "vitest": "^4.0.15",
      "zod": "4.2.1"
    }
  },
  "dependencies": {
    "@types/mime-types": "^3.0.1",
    "mime-types": "^3.0.2"
  }
}
