{
  "name": "@tokenring-ai/mono",
  "description": "TokenRing Monorepo with all community apps and packages",
  "version": "0.2.2",
  "devDependencies": {
    "@tokenring-ai/writer": "workspace:*",
    "@tokenring-ai/coder": "workspace:*",
    "@tokenring-ai/chat-frontend": "workspace:*",
    "@tokenring-ai/web-terminal": "workspace:*",
    "@types/bun": "^1.3.4",
    "bun-types": "^1.3.4",
    "husky": "^9.1.7",
    "trufflehog": "^0.0.5",
    "typescript": "^5.9.3",
    "syncpack": "^14.0.0-alpha.32",
    "vitest": "^4.0.15"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc --noEmit",
    "coder": "bun --env app/coder/src/tr-coder.js --source ./",
    "writer": "bun --env app/writer/src/tr-writer.js --source ./",
    "test": "bun run test",
    "prepare": "husky",
    "update-all-dependencies-latest": "npx syncpack@alpha update"
  },
  "type": "module",
  "workspaces": [
    "pkg/*",
    "app/*",
    "frontend/*",
    "deps/*",
    "docs"
  ],
  "dependencies": {
    "vite-plugin-singlefile": "^2.3.0"
  }
}
